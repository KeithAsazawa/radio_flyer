<%= simple_form_for(@song, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :mp3_file_size, class: "alert alert-error" %>
  <%= f.full_error :mp3_content_type, class: "alert alert-error" %>

  <%= f.input :mp3, label: "Upload a MP3" %>
  <%= f.input :artist %>
  <%= f.input :title %>
  <%= f.input :genre %>


  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", root_path %>